{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "../../dist/out-tsc",
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "styles"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "public/*"
  ]
}
