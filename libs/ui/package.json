{
  "name": "@madrus/ui",
  "version": "0.1.0",
  "main": "./ui.umd.js",
  "module": "./ui.es.js",
  "exports": {
    ".": {
      "import": "./ui.es.js",
      "require": "./ui.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
