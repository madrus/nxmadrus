{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "**/*.d.ts",
    "**/__tests__/*.spec.ts",
    "**/__tests__/*.spec.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
